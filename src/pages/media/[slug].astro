---
import { getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';

export async function getStaticPaths() {
  const posts = await getCollection('media');
  return posts.map((post) => ({
    params: { slug: post.slug },
    props: { post },
  }));
}

const { post } = Astro.props;
const { Content } = await post.render();
---

<Layout title={`${post.data.title} - Indian Restaurant Week`}>
  <article class="min-h-screen bg-irw-sand py-16 px-6">
    <div class="max-w-3xl mx-auto">
      <a href="/media" class="text-irw-red hover:text-irw-orange mb-8 inline-block">
        ‚Üê Back to Media
      </a>

      <header class="mb-8">
        <h1 class="text-4xl font-bold text-irw-red mb-4">{post.data.title}</h1>
        <div class="flex items-center gap-4 text-gray-600">
          <time>
            {post.data.date.toLocaleDateString('en-US', {
              year: 'numeric',
              month: 'long',
              day: 'numeric'
            })}
          </time>
          {post.data.author && (
            <span>by {post.data.author}</span>
          )}
        </div>
        {post.data.tags && post.data.tags.length > 0 && (
          <div class="flex gap-2 mt-4">
            {post.data.tags.map((tag) => (
              <span class="text-xs bg-irw-amber text-white px-3 py-1 rounded">
                {tag}
              </span>
            ))}
          </div>
        )}
      </header>

      {post.data.image && (
        <img
          src={post.data.image}
          alt={post.data.title}
          class="w-full h-96 object-cover rounded-lg mb-8"
        />
      )}

      <div class="prose prose-lg max-w-none bg-white p-8 rounded-lg shadow-lg">
        <Content />
      </div>
    </div>
  </article>
</Layout>

