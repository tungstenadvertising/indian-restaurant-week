---
// Reusable Contact Form Component
// Self-contained with submission logic and toast notification
// Used in: Press Room page, Contact Popup

interface Props {
    formName?: string;
    formId?: string;
    source?: string; // Track where submission came from
    onSuccess?: 'toast' | 'custom'; // How to handle success
}

const {
    formName = 'press-inquiry',
    formId = 'contact-form',
    source = 'press-room',
    onSuccess = 'toast'
} = Astro.props;

const toastId = `${formId}-toast`;
---

<form
    name={formName}
    method="POST"
    data-netlify="true"
    class="contact-form bg-white shadow-2xl rounded-3xl p-8 md:p-12"
    id={formId}
    data-toast-id={toastId}
    data-on-success={onSuccess}
>
    <input type="hidden" name="form-name" value={formName} />
    <input type="hidden" name="source" value={source} />

    <!-- Name -->
    <div class="mb-6">
        <label for={`${formId}-name`} class="block text-sm font-bold text-gray-700 mb-2">Name *</label>
        <input
            type="text"
            id={`${formId}-name`}
            name="name"
            required
            class="w-full px-4 py-3 border-2 border-gray-200 rounded-xl focus:border-irw-amber focus:outline-none transition-colors duration-300 contact-form-input"
            placeholder="Your name"
        />
    </div>

    <!-- Message -->
    <div class="mb-8">
        <label for={`${formId}-message`} class="block text-sm font-bold text-gray-700 mb-2">Message *</label>
        <textarea
            id={`${formId}-message`}
            name="message"
            rows="5"
            required
            class="w-full px-4 py-3 border-2 border-gray-200 rounded-xl focus:border-irw-amber focus:outline-none transition-colors duration-300 resize-none contact-form-input"
            placeholder="Tell us about your inquiry..."
        ></textarea>
    </div>

    <!-- Submit Button -->
    <div class="text-center">
        <button
            type="submit"
            class="inline-flex items-center px-10 py-4 bg-irw-red text-white font-bold rounded-full hover:bg-irw-orange transition-all duration-300 ease-smooth transform hover:scale-105 shadow-lg hover:shadow-xl text-lg"
        >
            <span>Send Message</span>
            <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"/>
            </svg>
        </button>
    </div>
</form>

<!-- Toast Notification (hidden by default, shown via JS) -->
<div id={toastId} class="contact-form-toast fixed top-6 right-6 z-[10000] pointer-events-none opacity-0 invisible" data-toast-hidden>
    <div class="bg-white rounded-2xl shadow-2xl p-6 flex items-start gap-4 max-w-sm border-l-4 border-green-500 pointer-events-auto">
        <div class="w-10 h-10 bg-green-100 rounded-full flex items-center justify-center flex-shrink-0">
            <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
            </svg>
        </div>
        <div>
            <h4 class="font-bold text-gray-900">Message Sent!</h4>
            <p class="text-gray-600 text-sm">Thank you for reaching out. We'll get back to you soon.</p>
        </div>
        <button class="contact-form-toast-close text-gray-400 hover:text-gray-600 -mt-1 -mr-1" data-toast-close={toastId}>
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
            </svg>
        </button>
    </div>
</div>

<style>
    /* Form input focus ring */
    .contact-form-input:focus {
        box-shadow: 0 0 0 3px rgba(231, 136, 36, 0.2);
    }
</style>

<script>
    // Self-contained form submission handler
    // Each ContactForm instance handles its own submission
    document.querySelectorAll('.contact-form').forEach((form) => {
        const formEl = form as HTMLFormElement;
        const toastId = formEl.dataset.toastId;
        const onSuccess = formEl.dataset.onSuccess;
        const toast = toastId ? document.getElementById(toastId) : null;

        // Toast functions
        const showToast = () => {
            if (toast) {
                // Remove hidden state, add transition classes
                toast.classList.remove('opacity-0', 'invisible');
                toast.classList.add('opacity-100', 'transition-all', 'duration-500', 'ease-out');
                toast.style.pointerEvents = 'auto';
                setTimeout(() => hideToast(), 5000);
            }
        };

        const hideToast = () => {
            if (toast) {
                toast.classList.remove('opacity-100');
                toast.classList.add('opacity-0');
                toast.style.pointerEvents = 'none';
                // Add invisible after transition
                setTimeout(() => toast.classList.add('invisible'), 500);
            }
        };

        // Toast close button
        const toastClose = toast?.querySelector('[data-toast-close]');
        toastClose?.addEventListener('click', hideToast);

        // Form submission
        formEl.addEventListener('submit', async (e) => {
            e.preventDefault();

            const formData = new FormData(formEl);
            const submitButton = formEl.querySelector('button[type="submit"]');
            const buttonSpan = submitButton?.querySelector('span');
            const originalText = buttonSpan?.textContent || 'Send Message';

            // Show loading state
            if (submitButton) (submitButton as HTMLButtonElement).disabled = true;
            if (buttonSpan) buttonSpan.textContent = 'Sending...';

            try {
                const response = await fetch('/', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/x-www-form-urlencoded' },
                    body: new URLSearchParams(formData as any).toString()
                });

                if (response.ok) {
                    formEl.reset();

                    // Dispatch custom event for parent components (e.g., popup close)
                    formEl.dispatchEvent(new CustomEvent('form:success', { bubbles: true }));

                    // Show toast if configured
                    if (onSuccess === 'toast') {
                        showToast();
                    }
                } else {
                    throw new Error('Submission failed');
                }
            } catch (error) {
                console.error('Error:', error);
                formEl.dispatchEvent(new CustomEvent('form:error', { bubbles: true }));
                alert('There was an error sending your message. Please try again.');
            } finally {
                if (submitButton) (submitButton as HTMLButtonElement).disabled = false;
                if (buttonSpan) buttonSpan.textContent = originalText;
            }
        });
    });
</script>
