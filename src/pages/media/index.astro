---
import { getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';

const posts = await getCollection('media');
const sortedPosts = posts.sort((a, b) => b.data.date.getTime() - a.data.date.getTime());
---

<Layout title="Media - Indian Restaurant Week">
  <div class="min-h-screen bg-irw-sand py-16 px-6">
    <div class="max-w-4xl mx-auto">
      <h1 class="text-irw-red font-bold text-4xl mb-8 text-center">Media</h1>

      <div class="space-y-8">
        {sortedPosts.map((post) => (
          <article class="bg-white rounded-lg shadow-lg overflow-hidden hover:shadow-xl transition-shadow">
            <a href={`/media/${post.slug}`} class="block">
              {post.data.image && (
                <img
                  src={post.data.image}
                  alt={post.data.title}
                  class="w-full h-64 object-cover"
                />
              )}
              <div class="p-6">
                <h2 class="text-2xl font-bold text-irw-red mb-2">{post.data.title}</h2>
                <p class="text-gray-600 mb-4">{post.data.excerpt}</p>
                <div class="flex items-center justify-between">
                  <time class="text-sm text-gray-500">
                    {post.data.date.toLocaleDateString('en-US', {
                      year: 'numeric',
                      month: 'long',
                      day: 'numeric'
                    })}
                  </time>
                  {post.data.tags && post.data.tags.length > 0 && (
                    <div class="flex gap-2">
                      {post.data.tags.map((tag) => (
                        <span class="text-xs bg-irw-amber text-white px-2 py-1 rounded">
                          {tag}
                        </span>
                      ))}
                    </div>
                  )}
                </div>
              </div>
            </a>
          </article>
        ))}
      </div>

      {sortedPosts.length === 0 && (
        <div class="text-center py-16">
          <p class="text-gray-600 text-lg">No posts yet. Check back soon!</p>
        </div>
      )}
    </div>
  </div>
</Layout>

