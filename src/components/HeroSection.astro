---
interface Props {
    id?: string;
    minHeight?: string;
    class?: string;
    overlayClass?: string;
    waveClass?: string;
    patternColor?: string;
    bgColor?: string;
}

const {
    id,
    minHeight = 'min-h-screen',
    class: className = '',
    overlayClass = '',
    waveClass = '',
    patternColor,
    bgColor,
} = Astro.props;
---

<section
    id={id}
    class:list={[
        minHeight,
        'flex flex-col justify-center items-center text-center text-white relative z-0 py-16 px-5 overflow-hidden',
        className,
    ]}
>
    <slot />

    <!-- Gradient Overlay -->
    <div class:list={[
        'absolute flex flex-col inset-0 bg-gradient-to-t from-irw-red via-transparent to-transparent z-10',
        overlayClass,
    ]}></div>

    <!-- Background Texture -->
    <div class="hero-texture bg-repeat bg-center absolute z-0 w-full h-full inset-0" style={[bgColor && `--hero-bg-color: ${bgColor}`, patternColor && `--hero-pattern-color: ${patternColor}`].filter(Boolean).join('; ') || undefined}></div>

    <!-- Bottom Wave -->
    <div class:list={[
        'mt-auto px-6 md:px-10 absolute z-50 grid place-items-center w-full bottom-0 translate-y-1',
        waveClass,
    ]}>
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 1049 118" class="w-full max-w-6xl">
            <path fill="#FDEFDA" d="M524.135.78c91.48 85.165 274.074 49.854 410.928 42.791 96.277-4.836 112.097 44.633 113.157 74.21H.48c1.044-29.708 17.12-78.933 113.091-74.21C250.426 50.634 432.655 85.945 524.135.781Z"/>
        </svg>

        <div
            class="pointer-events-none absolute top-2/3 translate-y-1"
            style="width: 50%; height: 60px; z-index: 0; filter: blur(15px); opacity: 0.5; background: radial-gradient(circle at 50% 50%, #A4865B, #FDEFDA);"
        ></div>
    </div>
</section>
